<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="382dp"
        android:layout_height="186dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <ImageView
            android:id="@+id/resIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:src="@drawable/restaurant_icon" />

        <TextView
            android:id="@+id/restaurantNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="50dp"
            android:text="Restaurant name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vicinityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="50dp"
            android:text="vicinity"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="-150dp"
            android:text="4.8"
            android:textSize="15sp"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_icon"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="98dp"
            android:layout_marginLeft="-125dp"
            card_view:tint="@color/yellow">

        </ImageView>

        <TextView
            android:id="@+id/numberOfReviewsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="-90dp"
            android:text="200"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="-60dp"
            card_view:tint="@color/blue">

        </ImageView>

        <ImageView
            android:id="@+id/favoriteButton"
            android:layout_width="44dp"
            android:layout_height="38dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/favorite_icon"
            card_view:tint="@color/red">

        </ImageView>

        <TextView
            android:id="@+id/add_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="110dp"
            android:text="Add to fav"
            android:textSize="15sp" />


    </androidx.cardview.widget.CardView>
</LinearLayout>